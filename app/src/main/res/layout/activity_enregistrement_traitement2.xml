<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".EnregistrementTraitement2">
    <include layout="@layout/menu"/>
    <include layout="@layout/footer"/>

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="25dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"
        android:progress="20"
        android:layout_marginTop="80dp"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:id="@+id/DeclarationEvenementIndesirable1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/rouge"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="130dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="3 Enregistrement"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="80dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/DeclarationSite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/rouge"
        android:layout_marginHorizontal="40dp"
        android:paddingVertical="30dp"
        android:backgroundTint="@color/grey"
        android:layout_below="@+id/DeclarationEvenementIndesirable1">

        <TextView
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:layout_marginStart="40dp"
            android:textColor="@color/black"
            android:background="@color/white"
            android:paddingBottom="60dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/DeclarationSite"
        android:layout_marginHorizontal="40dp">

        <Button
            android:id="@+id/Precedent31"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/bleu4"
            android:text="Retour Accueil"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"/>
    </LinearLayout>

</RelativeLayout>